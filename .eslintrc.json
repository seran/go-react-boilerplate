{
	"env": {
		"browser": true,
		"es6": true,
		"node": true
	},
	"extends": [
		"eslint:recommended",
		"plugin:react/recommended"
	],
	"globals": {
		"Atomics": "readonly",
		"SharedArrayBuffer": "readonly"
	},
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": true
		},
		"ecmaVersion": 2018,
		"sourceType": "module"
	},
	"plugins": [
		"react"
	],
	"rules": {
	},
	"settings": {
		"react": {
				"createClass": "createReactClass",
				"pragma": "React",
				"fragment": "Fragment",
				"version": "17.0",
				"flowVersion": "0.53"
			},
			"propWrapperFunctions": [
				"forbidExtraProps",
				{"property": "freeze", "object": "Object"},
				{"property": "myFavoriteWrapper"}
			],
			"linkComponents": [
				"Hyperlink",
				{"name": "Link", "linkAttribute": "to"}
			]
	}
}